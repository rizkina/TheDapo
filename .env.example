APP_NAME="The Dapo"
APP_ENV=local
APP_KEY= # Jalankan 'php artisan key:generate' setelah simpan
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

# Pengaturan Bahasa Indonesia agar format tanggal & angka sesuai
APP_LOCALE=id
APP_FALLBACK_LOCALE=id
APP_FAKER_LOCALE=id_ID

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_LEVEL=debug

# KONFIGURASI DATABASE POSTGRESQL
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=db_dapo
DB_USERNAME=postgres
DB_PASSWORD= # Sesuaikan dengan password postgres Laragon Anda

# OPTIMASI DENGAN REDIS (Sangat Penting untuk Tarik Data Dapodik)
SESSION_DRIVER=redis
SESSION_LIFETIME=120

CACHE_STORE=redis
QUEUE_CONNECTION=redis

# REDIS SETTINGS (Gunakan predis agar lebih stabil di Windows)
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# FILESYSTEM
FILESYSTEM_DISK=public

# EMAIL (Gunakan log saat testing agar tidak butuh SMTP asli)
MAIL_MAILER=log
MAIL_FROM_ADDRESS="admin@thedapo.sch.id"
MAIL_FROM_NAME="${APP_NAME}"

# GOOGLE DRIVE CONFIG (Sesuai diskusi sebelumnya)
# Data ini hanya fallback, karena kita sudah menyimpannya di Database
GOOGLE_DRIVE_FOLDER_ID=

VITE_APP_NAME="${APP_NAME}"